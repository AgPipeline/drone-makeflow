{
  "define": {
     "SCIF_APPDATA_output": "/scif/data/soilmask",
     "GEOJSON_FILE": SCIF_APPDATA_output + "/plots.json"
   },
  "rules": [
    {
       "command": "ogr2ogr -f GeoJSON \"${DEST_FILE}\" \"${SHAPEFILE_NAME}\"",
       "environment": {
         "SHAPEFILE_NAME": SHAPEFILE_NAME,
         "DEST_FILE": GEOJSON_FILE
       },
       "inputs": [
         SHAPEFILE_NAME
       ],
       "outputs": [
         GEOJSON_FILE
       ]
     }
  ]
}
